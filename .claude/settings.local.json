{
  "permissions": {
    "allow": [
      "Bash(npm run build:*)",
      "Bash(npm run typecheck:*)",
      "Bash(npm run test:*)",
      "Bash(npm test:*)",
      "Bash(npm run lint:*)",
      "Bash(npx vitest:*)",
      "Bash(npx tsx:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git pull:*)",
      "Bash(git fetch:*)",
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git restore:*)",
      "Bash(git stash:*)",
      "Bash(npm install:*)",
      "Bash(npm version:*)",
      "Bash(npm publish:*)",
      "Bash(npm view:*)",
      "Bash(npm show:*)",
      "Bash(npm info:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(node:*)",
      "Bash(echo:*)",
      "Bash(./tools/create-dependency-graph/create-dependency-graph.exe:*)",
      "mcp__everything-mcp__search",
      "mcp__everything-mcp__get_file_info",
      "mcp__fzf-mcp__fuzzy_search_files",
      "mcp__fzf-mcp__fuzzy_filter",
      "mcp__fzf-mcp__fuzzy_search_content",
      "mcp__memory-mcp__search_nodes",
      "mcp__memory-mcp__create_entities",
      "mcp__memory-mcp__add_observations",
      "mcp__memory-mcp__create_relations",
      "mcp__memory-mcp__set_importance",
      "mcp__memory-mcp__add_tags",
      "mcp__memory-mcp__open_nodes",
      "mcp__memory-mcp__read_graph",
      "mcp__memory-mcp__get_graph_stats",
      "mcp__memory-mcp__delete_entities",
      "mcp__memory-mcp__delete_observations",
      "mcp__deepthinking-mcp__deepthinking_core",
      "mcp__deepthinking-mcp__deepthinking_standard",
      "mcp__deepthinking-mcp__deepthinking_mathematics",
      "mcp__deepthinking-mcp__deepthinking_session",
      "mcp__deepthinking-mcp__deepthinking_analyze",
      "WebSearch"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "npm run typecheck 2>&1 | tail -20",
            "timeout": 60,
            "statusMessage": "Type-checking..."
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node -e \"const p=process.env.CLAUDE_FILE_PATH||''; if(/\\.(env|db|db-shm|db-wal)$/.test(p)){console.error('Blocked: cannot edit '+p);process.exit(2)}\"",
            "timeout": 5
          }
        ]
      }
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "deepthinking-mcp",
    "everything-mcp",
    "fzf-mcp",
    "memory-mcp"
  ]
}
